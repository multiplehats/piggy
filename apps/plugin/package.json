{
	"name": "@piggy/plugin",
	"version": "0.0.8",
	"description": "Piggy WordPress plugin",
	"homepage": "https://piggy.com",
	"contributors": [
		{
			"name": "Piggy",
			"email": "support@piggy.eu"
		},
		{
			"name": "Chris Jaydeh",
			"email": "hi@chrisjayden.com"
		}
	],
	"private": true,
	"type": "module",
	"scripts": {
		"clean": "rm -rf .turbo node_modules",
		"dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:admin\"",
		"dev:frontend": "NODE_ENV=development vite --config vite-frontend.config.ts --port 4001",
		"dev:admin": "NODE_ENV=development vite --config vite-admin.config.ts --port 4002",
		"build": "rimraf ./dist && pnpm build:frontend && pnpm build:admin",
		"build:frontend": "NODE_ENV=production vite build --config vite-frontend.config.ts",
		"build:admin": "NODE_ENV=production vite build --config vite-admin.config.ts",
		"analyze": "ANALYZE=true pnpm build",
		"i18n": "WP_CLI_PHP_ARGS='-d memory_limit=4096M' wp i18n --allow-root make-pot . languages/piggy.pot --slug=piggy --domain=piggy --include=src,dist/admin/assets,dist/frontend/assets --exclude=bin,node_modules,tests,vendor,dist/admin/assets/codemirror-*.js,dist/admin/assets/vendor-*.js,dist/admin/assets/*.js.map",
		"typecheck": "svelte-check --tsconfig ./tsconfig.json",
		"typecheck:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"package-plugin": "rimraf piggy.zip && ./bin/build-plugin-zip.sh",
		"package-plugin:dev": "rimraf piggy.zip && ./bin/build-plugin-zip.sh -d",
		"package-plugin:zip-only": "rimraf piggy.zip && ./bin/build-plugin-zip.sh -z",
		"lint-php": "composer run-script phpcs ./src",
		"lint-php-fix": "composer run-script phpcbf ./src",
		"lint": "eslint \"./src/**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
		"format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json,svelte}\"",
		"env:start": "wp-env start",
		"env:stop": "wp-env stop",
		"env:reset": "wp-env reset",
		"env:clean": "wp-env clean all && wp-env start",
		"env:destroy": "wp-env destroy",
		"env:restart": "wp-env start --update"
	},
	"devDependencies": {
		"@piggy/lib": "workspace:^",
		"@piggy/plugin-frontend": "workspace:^",
		"@piggy/tailwind-config": "workspace:^",
		"@piggy/types": "workspace:*",
		"@codemirror/autocomplete": "^6.10.2",
		"@codemirror/lang-css": "^6.2.1",
		"@codemirror/lang-javascript": "^6.2.1",
		"@codemirror/language": "^6.9.1",
		"@codemirror/lint": "^6.4.2",
		"@codemirror/state": "^6.3.1",
		"@codemirror/theme-one-dark": "^6.1.2",
		"@codemirror/view": "^6.21.3",
		"@kucrut/vite-for-wp": "^0.7.1",
		"@popperjs/core": "^2.11.8",
		"@rgossiaux/svelte-headlessui": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@tailwindcss/forms": "^0.5.6",
		"@tanstack/svelte-query-devtools": "^5.24.1",
		"@tsconfig/svelte": "^5.0.2",
		"@types/dinero.js": "^1.9.2",
		"@types/jquery": "^3.5.23",
		"@types/lodash-es": "^4.17.10",
		"@types/node": "^18.18.5",
		"@types/qs": "^6.9.8",
		"@wordpress/api-fetch": "^6.40.0",
		"@wordpress/env": "^9.4.0",
		"@wordpress/hooks": "^3.43.0",
		"@wordpress/i18n": "^4.43.0",
		"@wordpress/keycodes": "^3.43.0",
		"autoprefixer": "^10.4.16",
		"bits-ui": "^0.5.7",
		"codemirror": "^6.0.1",
		"concurrently": "^8.2.1",
		"dinero.js": "^1.9.1",
		"install": "^0.13.0",
		"lodash-es": "^4.17.21",
		"lucide-svelte": "^0.288.0",
		"postcss": "^8.4.31",
		"qs": "^6.11.2",
		"rimraf": "^5.0.5",
		"rollup-plugin-external-globals": "^0.8.0",
		"rollup-plugin-visualizer": "^5.9.2",
		"svelte": "^4.2.1",
		"svelte-bootstrap-icons": "^3.1.0",
		"svelte-check": "^3.5.2",
		"svelte-codemirror-editor": "^1.1.0",
		"svelte-multiselect": "^10.2.0",
		"svelte-portal": "^2.2.0",
		"svelte-preprocess": "^5.0.4",
		"svelte-tippy": "^1.3.2",
		"svelte-transition": "^0.0.10",
		"svelte-writable-derived": "^3.1.0",
		"tailwindcss": "^3.3.3",
		"tippy.js": "^6.3.7",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vanilla-colorful": "^0.7.2",
		"vite": "^4.5.0",
		"vite-imagetools": "^6.0.0",
		"vite-plugin-banner": "^0.7.1"
	},
	"dependencies": {
		"@piggy/plugin-admin": "workspace:^",
		"@splidejs/svelte-splide": "^0.2.9",
		"@tanstack/svelte-query": "^5.24.1",
		"@wordpress/a11y": "^3.43.0",
		"@wordpress/html-entities": "^3.56.0",
		"history": "^5.3.0",
		"slugify": "^1.6.6",
		"svelte-local-storage-store": "^0.6.4",
		"svelte-navigator": "^3.2.2"
	}
}