{
	"name": "leat/plugin",
	"description": "Leat WordPress plugin.",
	"homepage": "https://leat.com/",
	"type": "wordpress-plugin",
	"keywords": [
		"woocommerce"
	],
	"license": "GPL-3.0-or-later",
	"prefer-stable": true,
	"minimum-stability": "dev",
	"require": {
		"composer/installers": "^1.7.0",
		"kucrut/vite-for-wp": "^0.5.1",
		"piggy/piggy-php-sdk": "^3.5",
		"wplatest/updater": "^1.3"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"phpcompatibility/php-compatibility": "*",
		"woocommerce/woocommerce-sniffs": "0.1.3",
		"wp-coding-standards/wpcs": "*",
		"php-stubs/woocommerce-stubs": "^7.1",
		"wp-cli/i18n-command": "^2.6"
	},
	"autoload": {
		"psr-4": {
			"Leat\\": "src/"
		}
	},
	"scripts": {
		"phpcs": [
			"phpcs --extensions=php -s -p"
		],
		"phpcbf": [
			"phpcbf -p --extensions=php"
		],
		"makepot": [
			"wp i18n make-pot . ./languages/leat.pot --include=\"leat.php,src,dist/frontend/assets, dist/admin/assets\""
		]
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true,
		"autoloader-suffix": "LeatWP",
		"platform": {
			"php": "8.0"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"extra": {
		"scripts-description": {
			"phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
			"phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
		}
	}
}