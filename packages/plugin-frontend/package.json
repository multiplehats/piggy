{
	"name": "@leat/plugin-frontend",
	"homepage": "https://leat.com",
	"author": "Chris Jayden",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"clean": "rm -rf .turbo node_modules",
		"dev:frontend": "NODE_ENV=development pnpm sync && svelte-package --watch",
		"build": "NODE_ENV=production pnpm sync && svelte-package",
		"sync": "svelte-kit sync",
		"analyze": "ANALYZE=true pnpm build",
		"typecheck": "svelte-check --tsconfig ./tsconfig.json",
		"typecheck:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint \"./src/**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
		"format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json,svelte}\""
	},
	"devDependencies": {
		"@leat/lib": "workspace:^",
		"@leat/tailwind-config": "workspace:^",
		"@leat/types": "workspace:*",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tanstack/svelte-query-devtools": "^5.64.0",
		"@tsconfig/svelte": "^5.0.4",
		"@types/jquery": "^3.5.32",
		"@wordpress/api-fetch": "^6.55.0",
		"@wordpress/env": "^9.10.0",
		"@wordpress/hooks": "^3.58.0",
		"@wordpress/i18n": "^4.58.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^0.5.7",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.399.0",
		"postcss": "^8.4.49",
		"qs": "^6.13.1",
		"rimraf": "^5.0.10",
		"rollup-plugin-external-globals": "^0.8.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"svelte": "^5.19.5",
		"svelte-check": "^3.8.6",
		"svelte-preprocess": "^5.1.4",
		"tailwindcss": "^3.4.17",
		"tippy.js": "^6.3.7",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.0.11"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^5.64.0"
	}
}